<% include layout/_header %>
  <div class="container">
    <div class="row">

      <h1 class="col-sm-12"><%= title %></h1>
    </div>
    <div class="row">
      <div class="col-lg-4 col-sm-12">
        <form role="form" class="" action="" method="post">
          <% for(let error of errors) {%>
            <div class="alert alert-danger">
              <%= error.message %>
            </div>
            <% } %>
              <div class="form-group">
                <label for="inputEmail">Имя:</label>
                <input required type="text" class="form-control input-lg" minlength="5" name="name" placeholder="Введите имя">
              </div>
              <div class="form-group">
                <label for="inputEmail">Адрес email:</label>
                <input required type="email" class="form-control input-lg" minlength="5" name="email" placeholder="Введите email">
              </div>
              <div class="form-group">
                <label for="inputPassword">Пароль:</label>
                <input required type="password" class="form-control input-lg" minlength="6" name="password" placeholder="Введите пароль">
              </div>
              <div class="form-group">
                <label for="inputPassword">Повторите пароль:</label>
                <input required type="password" class="form-control input-lg" minlength="6" name="password2" placeholder="Повторите пароль">
              </div>
              <button type="submit" class="btn btn-success btn-lg">Зарегистрироваться</button>
        </form>
      </div>
    </div>
  </div>
  <% include layout/_footer %>
