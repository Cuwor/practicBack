<% include layout/_header %>
<div class="container">
  <div class="row">

    <h1 class="col-sm-12">Регистрация</h1>
  </div>
  <div class="row">
    <div class="col-lg-4 col-sm-12">
      <form role="form" class="" action="/" method="post">
        <div class="alert alert-danger">Проверьте правильность заполнения</div>
        <div class="form-group">
          <label for="inputEmail">Имя:</label>
          <input required type="text" class="form-control input-lg" minlength="5" placeholder="Введите имя">
        </div>
        <div class="form-group">
          <label for="inputEmail">Адрес email:</label>
          <input required type="email" class="form-control input-lg" minlength="5" placeholder="Введите email">
        </div>
        <div class="form-group">
          <label for="inputPassword">Пароль:</label>
          <input required type="password" class="form-control input-lg" minlength="6" placeholder="Введите пароль">
        </div>
        <div class="form-group">
          <label for="inputPassword">Повторите пароль:</label>
          <input required type="password" class="form-control input-lg" minlength="6"  placeholder="Повторите пароль">
        </div>
        <button type="submit" class="btn btn-success btn-lg"  >Зарегистрироваться</button>

      </form>
    </div>
  </div>
</div>
<% include layout/_footer %>
