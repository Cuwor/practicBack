<% include layout/_header %>
<div class="container">
    <div class="row">
      <h1 class="col-sm-12"><%= title %></h1>
    </div>
    <form role="form" class="" action="" method="post">
      <% for(let error of errors) {%>
        <div class="alert alert-danger">
          <%= error.message %>
        </div>
        <% } %>
      <div class="form-group">
        <label>Заголовок:</label>
        <input required type="text" class="form-control input-lg" name="title" placeholder="Введите заголовок">
      </div>
      <div class="form-group">
        <label>Описание:</label>
        <textarea required type="text" class="form-control" name="preview" placeholder="Введите описание"></textarea>
      </div>
      <div class="form-group">
        <label>Текст:</label>
        <textarea type="text" class="form-control" name="text" placeholder="Введите текст"></textarea>
      </div>
      <button type="submit" class="btn btn-success btn-lg">Опубликовать</button>
    </form>
  </div>
<% include layout/_footer %>
