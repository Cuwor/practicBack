<% include ../views/layout/_header %>
<div class="container">
    <div class="row">
      <h1 class="col-sm-12">Новая статья</h1>
    </div>
    <form role="form" class="" action="/" method="post">
      <div class="alert alert-danger">Проверьте правильность заполнения</div>
      <div class="form-group">
        <label>Заголовок:</label>
        <input required type="text" class="form-control input-lg" placeholder="Введите заголовок">
      </div>
      <div class="form-group">
        <label>Описание:</label>
        <textarea required type="text" class="form-control" placeholder="Введите описание"></textarea>
      </div>
      <div class="form-group">
        <label>Текст:</label>
        <textarea type="text" class="form-control" placeholder="Введите текст"></textarea>
      </div>
      <button type="submit" class="btn btn-success btn-lg">Опубликовать</button>
    </form>
  </div>
<% include ../views/layout/_footer %>
