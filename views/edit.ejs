<% include layout/_header %>
<div class="container">
    <div class="row">
      <h1 class="col-sm-12"><%= title %></h1>
    </div>
    <form role="form" class="" action="/" method="post">
      <% for(let error of errors) {%>
        <div class="alert alert-danger">
          <%= error.message %>
        </div>
        <% } %>
      <div class="form-group">
        <label>Заголовок:</label>
        <input required type="text" class="form-control input-lg"
        value="<%= fields ? fields.title.trim() : '' %>" placeholder="Введите заголовок">
      </div>
      <div class="form-group">
        <label>Описание:</label>
        <textarea required type="text" class="form-control" placeholder="Введите описание"><%= fields ? fields.preview.trim() : '' %></textarea>
      </div>
      <div class="form-group">
        <label>Текст:</label>
        <textarea type="text" class="form-control" placeholder="Введите текст"><%= fields ? fields.text.trim() : '' %></textarea>
      </div>
      <button type="submit" class="btn btn-success btn-lg">Опубликовать</button>
    </form>
  </div>
<% include layout/_footer %>
