<% include ../views/layout/_header %>
<div class="container">
  <div class="row">
    <h1 class="col-sm-12">Авторизация</h1>
  </div>
  <div class="row">
    <div class="col-lg-4 col-sm-12">
      <form role="form" action="/" method="post">
        <div class="alert alert-danger">Неверный логин или пароль</div>
        <div class="form-group">
          <label for="inputEmail">Адрес email:</label>
          <input required type="email" class="form-control input-lg" minlength="5" placeholder="Введите email">
        </div>
        <div class="form-group">
          <label for="inputPassword">Пароль:</label>
          <input required type="password" minlength="6" class="form-control input-lg" placeholder="Введите пароль">
        </div>
        <button type="submit" class="btn btn-success btn-lg">Войти</button>
      </form>
    </div>
  </div>
</div>
<% include ../views/layout/_footer %>
